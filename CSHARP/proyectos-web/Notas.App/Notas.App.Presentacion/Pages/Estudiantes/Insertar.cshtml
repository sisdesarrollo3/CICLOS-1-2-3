@page
@model Notas.App.Presentacion.Pages.Estudiantes.InsertarModel
@{
    ViewData["Title"] = "Crear";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Crear un nueva Estudiante</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">

                <div class="container" style="padding: 50px">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="estudiante.identificacion"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="estudiante.identificacion" class="form-control" />
                            </div>
                            <span asp-validation-for="estudiante.identificacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="estudiante.nombre"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="estudiante.nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="estudiante.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="estudiante.mail"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="estudiante.mail" class="form-control" />
                            </div>
                            <span asp-validation-for="estudiante.mail" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="estudiante.movil"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="estudiante.movil" class="form-control" />
                            </div>
                            <span asp-validation-for="estudiante.movil" class="text-danger"></span>
                        </div>
                    </div>
                        
                        @if (Model.generos.Count() > 0) { 
                    <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2"> 
                            <label asp-for="estudiante.genero"></label>
                        </div>
                        <div class="col-sm-6">
                            <select asp-for="estudiante.genero">
                                @foreach (var genero in Model.generos)  {                
                                    <option value=@genero.id>@genero.nombre</option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="estudiante.genero" class="text-danger"></span>
                        </div>
                    </div>
                        }


                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Crear" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="Listar" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
