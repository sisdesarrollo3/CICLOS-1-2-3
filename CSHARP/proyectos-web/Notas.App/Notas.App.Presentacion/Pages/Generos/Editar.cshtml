@page
@model Notas.App.Presentacion.Pages.Generos.EditarModel
@{
    ViewData["Title"] = "Editar Genero";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Actualizar Genero</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <!-- se envía campo de la PK oculto -->
                <input type="hidden"  asp-for="genero.id" />

                <div class="container" style="padding: 50px">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="genero.id" class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="genero.id" class="form-control" value="@Model.genero.id" disabled />
                            </div>
                            <span asp-validation-for="genero.id" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="genero.nombre" class="text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="genero.nombre" class="form-control" value=@Model.genero.nombre />
                            </div>
                            <span asp-validation-for="genero.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="genero.abreviatura" class="text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="genero.abreviatura" class="form-control" value=@Model.genero.abreviatura />
                            </div>
                            <span asp-validation-for="genero.abreviatura" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Actualizar" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="Listar" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>