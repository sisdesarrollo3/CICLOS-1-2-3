@page
@model Notas.App.Presentacion.Pages.Generos.DetallarModel
@{
    ViewData["Title"] = "Datos Asignatura";
}
<div class="card">
    <div class="card-header">
        <h2 class="text-info">Datos Asignatura</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-primary">
                <div class="container" style="padding: 30px">
                    <!-- se envía campo de la PK oculto -->
                    <input type="hidden"  asp-for="genero.id" />
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="genero.id"  class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                @Model.genero.id;
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="genero.nombre"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                @Model.genero.nombre
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="genero.abreviatura"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                @Model.genero.abreviatura
                            </div>
                            <span asp-validation-for="genero.abreviatura" class="text-danger"></span>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4">
                                <a asp-page="Listar" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

